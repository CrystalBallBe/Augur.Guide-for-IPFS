source 'https://rubygems.org'

# Core Jekyll static site generator
gem 'jekyll', '~> 3.9.0'

# Minimal theme for Jekyll (similar to GitHub Pages default)
gem 'jekyll-theme-minimal'

# GitHub Flavored Markdown parser for kramdown
# Required for tables, task lists, strikethrough, and other GFM features
gem 'kramdown-parser-gfm'

# HTTP server for local development (required for Jekyll 3.x with Ruby 3.0+)
gem 'webrick'

# Note: jekyll-seo-tag is automatically installed as jekyll-theme-minimal dependency
# but disabled in _config.yml (plugins: []) for IPFS deployment